# IMAGEN MODELO
FROM eclipse-temurin:17.0.13_11-jdk

#INFORMAR EL PUERTO DONDE SE EJECUTA EL CONTENEDOR (INFORMATIVO)
EXPOSE 8080

# DEFINIR DIRECTORIO RAÍZ DE NUESTRO CONTENEDOR
WORKDIR /root

# COPIAR Y PEGAR ARCHIVOS DENTRO DEL CONTENEDOR
COPY ./pom.xml /root
COPY ./.mvn /root/.mvn
COPY ./mvnw /root

# DESCARGAR LAS DEPENDENCIAS
RUN ./mvnw dependency:go-offline

# COPIAR EL CODIGO FUENTE DENTRO DEL CONTENEDOR
COPY ./src  /root/src

# CONSTRUIR NUESTRA APP
RUN ./mvnw clean install -DskipTests

# COPIAR EL ARCHIVO JAR A UNA RUTA ACCESIBLE
COPY ./target/SpringDocker-0.0.1-SNAPSHOT.jar /root/SpringDocker-0.0.1-SNAPSHOT.jar

# LEVANTAR LA APLICACIÓN
ENTRYPOINT ["java", "-jar", "/root/SpringDocker-0.0.1-SNAPSHOT.jar"]

